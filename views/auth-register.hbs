<link rel="stylesheet" href="/css/auth.css" />

{{#> layout currentPage='Register'}}

<!-- REGISTER -->
<div class="container d-flex justify-content-center align-items-center mt-5">
    <form id="register-form" action="/register" method="post" class="auth-form glass-form p-4 rounded shadow my-5">
        <h1 class="mb-4 text-center text-white">Register</h1>

        <div class="form-floating mb-3">
            <input name="name" id="name" type="text" class="form-control glass-input" placeholder="Name" required />
            <label for="name">Name</label>
        </div>

        <div class="form-floating mb-3">
            <input name="email" id="email" type="email" class="form-control glass-input" placeholder="Email" required />
            <label for="email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input name="password" id="password" type="password" class="form-control glass-input" placeholder="Password"
                required />
            <label for="password">Password</label>
        </div>

        <div class="form-floating mb-3">
            <input name="confirmPassword" id="confirmPassword" type="password" class="form-control glass-input"
                placeholder="Confirm Password" required />
            <label for="confirmPassword">Confirm Password</label>
        </div>

        {{#if messages.error}}
        <div class="alert alert-danger glass-alert" role="alert">{{messages.error}}</div>
        {{/if}}

        <div class="text-center mt-4">
            <button type="submit" class="glass-button w-50">Register</button>
        </div>
    </form>
</div>


{{/layout}}