{{#> layout}}
<link rel="stylesheet" href="/css/index.css">

<main class="container py-5">
    <div class="container my-5">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-5 fw-bold text-white mb-4">Wiki Games</h1>
                {{#if user}}
                <div class="d-flex justify-content-end gap-2 mb-4">
                    <a href="/add" class="btn glass-button">
                        <i class="bi bi-plus-lg me-2"></i>Add Hero
                    </a>
                    <a href="/type-add" class="btn glass-button">
                        <i class="bi bi-plus-lg me-2"></i>Add Type
                    </a>
                </div>
                {{/if}}
            </div>
        </div>

        <div class="row g-4">
            {{#each heroes}}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="testimonial-card glass-card">
                    <!-- Detail Button di Atas -->
                    <a href="/{{id}}" class="btn btn-detail w-100 rounded-bottom-0">
                        <i class="bi bi-eye"></i>
                        Detail
                    </a>

                    <!-- Gambar Hero -->
                    <img src="/img/{{photo}}" class="testimonial-image" alt="{{this.name}}">

                    <!-- Body Card -->
                    <div class="card-body p-3">
                        <!-- Nama dan Type -->
                        <div class="text-center mb-3">
                            <h5 class="text-white mb-1">{{this.name}}</h5>
                            <small class="text-muted">{{this.type.name}}</small>
                        </div>

                        <!-- Edit & Delete Button -->
                        {{#if (equal ../user.id userId)}}
                        <div class="d-flex gap-2">
                            <form class="flex-grow-1"><a href="/{{id}}/edit" class="btn btn-edit w-100">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a></form>

                            <form action="/{{id}}?_method=DELETE" method="post" class="flex-grow-1">
                                <button type="submit" class="btn btn-delete w-100"
                                    onclick="return confirm('Delete this hero?')">
                                    <i class="bi bi-trash3"></i>
                                    Delete
                                </button>
                            </form>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-12">
                <div class="empty-state text-center py-5 glass-card">
                    <h4 class="text-white-50">No heroes found</h4>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</main>

{{/layout}}