<link rel="stylesheet" href="/css/auth.css" />

{{#> layout currentPage='Login'}}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <form id="login-form" action="/login" method="post" class="auth-form glass-form p-4 rounded shadow my-5">
        <h3 class="mb-4 text-white text-center">Welcome back! Please Login.</h3>

        <div class="form-floating mb-3">
            <input name="email" id="email" type="email" class="form-control glass-input" placeholder="Email" required />
            <label for="email">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input name="password" id="password" type="password" class="form-control glass-input" placeholder="Password"
                required />
            <label for="password">Password</label>
        </div>

        {{!-- pesan error --}}
        {{#if messages.error}}
        <div class="alert alert-danger glass-alert" role="alert">{{messages.error}}</div>
        {{/if}}

        {{!-- pesan sukses --}}
        {{#if messages.success}}
        <div class="alert alert-success glass-alert" role="alert">{{messages.success}}</div>
        {{/if}}

        <div class="text-center mt-4">
            <p class="text-white">Tidak punya akun? <a href="/register" class="glass-link">Register</a></p>
            <button type="submit" class="glass-button">Login</button>
        </div>
    </form>
</div>

{{/layout}}